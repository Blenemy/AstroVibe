---
import logo from "../../assets/Logo.svg";
import firstContentImage from "../../assets/header-first-image.png";
import secondContentImage from "../../assets/header-second-image.png";
import Button from "../../components/Button/Button.tsx";

import './Header.scss'

const HEADER_LINKS = [
  { href: "/", label: "Features" },
  { href: "/", label: "Benefits" },
  { href: "/", label: "Premium" },
  { href: "/", label: "Download" },
];
---

<header class="header">
  <div class="header__container _container">
    <nav class="header__navigation-menu navigation-menu">
      <div class="navigation-menu__left">
        <img src={logo.src} alt="logo" class="navigation-menu__logo" />
        <p class="navigation-menu__logo-title">AstroVibe</p>
      </div>
      <div class="navigation-menu__right">
        <ul class="navigation-menu__list">
          {HEADER_LINKS.map((link) => (
            <li class="navigation-menu__item">
              <a href={link.href} class="navigation-menu__link">{link.label}</a>
            </li>
          ))}
        </ul>
      </div>
    </nav>
    <section class="header__content content-header">
      <div class="content-header__preview">
        <h1 class="content-header__title">
          Unlock the Secrets of <br /> Your Stars with AstroVibe
        </h1>
        <p class="content-header__description">
          Your Daily Compass for Love, Career, and Personal Growth
        </p>
        <div class="content-header__app-store-buttons">
          <Button variant="Google Play" client:load  />
          <Button variant="App Store" client:load  />
        </div>
      </div>
      <div class="content-header__images">
        <img
          src={firstContentImage.src}
          alt="iPhone 14 Pro Space"
          class="content-header__img content-header__img_left"
        />
        <img
          src={secondContentImage.src}
          alt="iPhone 15 Pro"
          class="content-header__img content-header__img_right"
        />
      </div>
    </section>
  </div>
</header>
